mixin activityCard(activity={})
    .store 
        .store__hero
            .store__actions
                .store__action.store__action--edit
                    a(href=`/activities/${activity._id}/edit`)
                        !=h.icon('pencil')
            img(src=`/uploads/${activity.photo || 'store.png'}`)
            h2.title
                a(href=`/activities/${activity.slug}`) #{activity.name}
        .store__details
            p=activity.description.split(' ').slice(0, 25).join(' ')
